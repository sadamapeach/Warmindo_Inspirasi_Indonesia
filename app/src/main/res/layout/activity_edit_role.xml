<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditRoleActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Edit Role"
        style="@style/Header"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@color/kuning" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            app:srcCompat="@drawable/food_2"/>

        <EditText
            android:id="@+id/et_role_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text_Login"
            android:hint="Role Name"
            android:inputType="number"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/textView9"
            style="@style/Text_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Status"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_role_name" />

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/btn_save"
            style="@style/Text_Button"
            android:layout_width="224dp"
            android:layout_height="46dp"
            android:text="S A V E"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>>
</LinearLayout>
